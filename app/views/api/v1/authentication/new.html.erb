<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md" data-controller="login-ui">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-8">Acceso al Sistema</h2>

    <%= form_with url: "/api/v1/auth/login", local: true, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :username, "Usuario", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :username, class: "mt-1 block w-full border border-gray-300 rounded-md p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :password, "ContraseÃ±a", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 block w-full border border-gray-300 rounded-md p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "Ingresar", 
            class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer",
            data: { login_ui_target: "submitBtn" } %>
      </div>
    <% end %>
  </div>
</div>